<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_logo" />

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/nothing"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="5dp"
            android:inputType="phone"
            android:text="15205152201"
            android:textColor="@color/text_red" />

        <View
            android:id="@+id/divider"
            style="@style/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/nothing"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="5dp"
                android:text="111111"
                android:inputType="textPassword"
                android:textColor="@color/text_red" />

            <CheckBox
                android:id="@+id/iv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_bg_sel"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout style="@style/line_horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_fillet"
                android:text="登录"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_fillet"
                android:text="注册"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_password"
            style="@style/text_blue_medium"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:minHeight="20dp"
            android:text="忘记密码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tip"
                style="@style/text_grey_medium"
                android:layout_centerInParent="true"
                android:text="您还可以选择第三方登录" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_tip"
                android:background="@color/line_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_tip"
                android:background="@color/line_grey" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/icon_weixin" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/icon_qq" />

            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/icon_weibo" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>