<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_logo" />

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/nothing"
            android:drawableLeft="@drawable/ic_phone"
            android:hint="手机号"
            android:textColorHint="@color/text_hint_grey"
            android:textSize="@dimen/text_medium"
            android:drawablePadding="10dp"
            android:inputType="phone"
            android:textColor="@color/text_red" />

        <View
            android:id="@+id/divider"
            style="@style/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/nothing"
                android:drawableLeft="@drawable/ic_lock"
                android:hint="密码"
                android:textColorHint="@color/text_hint_grey"
                android:textSize="@dimen/text_medium"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:textColor="@color/text_red" />

            <CheckBox
                android:id="@+id/iv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_bg_sel"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout style="@style/line_horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_fillet"
                android:text="登录"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btn_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_fillet"
                android:text="注册"
                android:textColor="@color/white" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_password"
            style="@style/text_blue_medium"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:minHeight="20dp"
            android:drawableLeft="@drawable/forget_icon"
            android:textColor="#75ced6"
            android:drawablePadding="10dp"
            android:text="忘记密码?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tip"
                style="@style/text_grey_medium"
                android:layout_centerInParent="true"
                android:textColor="@color/text_grey_ccc"
                android:text="第三方账号直接登录" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_tip"
                android:background="@color/line_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_tip"
                android:background="@color/line_grey" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/icon_weixin" />


            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/icon_qq" />


            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/icon_weibo" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>