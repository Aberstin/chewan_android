<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/active_bg"

        android:orientation="vertical"

        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nickname"
                style="@style/text_black_medium"
                android:text="请我吃饭吧" />

            <ImageView
                android:id="@+id/head_att"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/headaut_dl"
                />

            <ImageView
                android:id="@+id/iv_car_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_car_name"
                style="@style/text_grey_small"
                android:layout_marginLeft="3dp"
                android:text="宝马" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right">

                <ImageView
                    android:id="@+id/attention"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:src="@drawable/icon_heart" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <include layout="@layout/include_sex" />

            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_red"
                android:text="请我吧 " />

            <TextView
                android:id="@+id/transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_skyblue"
                android:text="包接送 " />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/active_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/model_pic" />


            <com.gongpingjia.carplay.view.AnimButtonView
                android:id="@+id/invite"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                my:bg="@drawable/red_circle"
                my:src="@drawable/red_circle"


                >

                <TextView
                    style="@style/text_white_small"
                    android:layout_centerInParent="true"
                    android:text="邀请" />
            </com.gongpingjia.carplay.view.AnimButtonView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/upload"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/white_btn_bg"
                    android:text="上传"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />

                <Button
                    android:id="@+id/takephotos"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_btn_bg"
                    android:text="拍照"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />

                <Button
                    android:id="@+id/album"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/white_btn_bg"
                    android:text="相册"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/location"
                style="@style/text_grey_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="南京邮电大学" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="20m" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/tv_distance"
                android:src="@drawable/icon_location" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>