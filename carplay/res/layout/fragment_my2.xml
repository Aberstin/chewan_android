<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.gongpingjia.carplay.MyActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="310dp">

            <ImageView
                android:id="@+id/photo_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                 />
            <TextView
                android:id="@+id/photo_bg_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <com.gongpingjia.carplay.view.RoundImageView
                android:id="@+id/head"
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp" />

            <TextView
                android:id="@+id/attestation"
                style="@style/text_white_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="122dp"
                android:background="@drawable/radio_sex_man_focused"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="4dp"
                android:text="未认证"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attestation"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        style="@style/text_white_medium"
                        android:layout_marginRight="12dp"
                        android:text="陈小小"
                        android:textStyle="bold" />

                    <include layout="@layout/include_sex" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_completeness"
                    style="@style/text_white_small"
                    android:layout_marginTop="22dp"
                    android:text="资料完成度60%,越高越吸引人"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/perfect"
                    android:layout_width="195dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_red_fillet"
                    android:text="完善"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/myphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:paddingLeft="10dp"
            android:paddingTop="18dp">

            <ImageView
                android:id="@+id/addphoto"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:src="@drawable/my_camera" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:id="@+id/myactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/my_active" />

                <TextView
                    style="@style/text_grey_small"
                    android:layout_marginTop="15dp"
                    android:text="我的活动" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myattention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/my_attention" />

                <TextView
                    style="@style/text_grey_small"
                    android:layout_marginTop="15dp"
                    android:text="我的关注" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/headattestation"
            style="@style/linearlayout"
            android:background="@drawable/bg_s">

            <TextView
                style="@style/text_grey_medium"
                android:text="头像认证" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtphotoAuthStatus"
                    style="@style/text_black_small"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="未认证" />

                <com.gongpingjia.carplay.view.RoundImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_btn" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/line" />

        <LinearLayout
            android:id="@+id/carattestation"
            style="@style/linearlayout"
            android:background="@drawable/bg_s">

            <TextView
                style="@style/text_grey_medium"
                android:text="车主认证" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attestation_txt"
                    style="@style/text_black_small"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="未认证" />

                <com.gongpingjia.carplay.view.RoundImageView
                    android:id="@+id/carlogo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_btn" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</ScrollView>
