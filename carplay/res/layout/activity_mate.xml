<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:src="@drawable/mate_title" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/mate_bg" />

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp"
                my:bg="@drawable/mate_cf"
                my:src="@drawable/mate_cf">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="62dp"
                my:bg="@drawable/mate_cg"
                my:src="@drawable/mate_cg">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="128dp"
                my:bg="@drawable/mate_kdy"
                my:src="@drawable/mate_kdy">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="190dp"
                my:bg="@drawable/mate_lg"
                my:src="@drawable/mate_lg">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="212dp"
                my:bg="@drawable/mate_yd"
                my:src="@drawable/mate_yd">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="250dp"
                my:bg="@drawable/mate_yx"
                my:src="@drawable/mate_yx">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="523dp"
                android:layout_marginTop="44dp"
                my:bg="@drawable/mate_yd"
                my:src="@drawable/mate_yd">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="408dp"
                android:layout_marginTop="122dp"
                my:bg="@drawable/mate_gw"
                my:src="@drawable/red_circle">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="465dp"
                android:layout_marginTop="271dp"
                my:bg="@drawable/mate_hkf"
                my:src="@drawable/mate_hkf">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="365dp"
                android:layout_marginTop="277dp"
                my:bg="@drawable/mate_hkf"
                my:src="@drawable/mate_hkf">

            </com.gongpingjia.carplay.view.AnimButtonView>

        </RelativeLayout>


    </HorizontalScrollView>


    <Button
        android:id="@+id/btn_click"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:background="@drawable/mate_btn_bg"
        android:text="随便看看"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium" />
</LinearLayout>