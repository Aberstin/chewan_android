<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/report_rumor"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/report_rumor_txt"
            style="@style/text_grey_small"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="谣言" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/report_rumor_txt"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/report_rumor_txt"
            android:src="@drawable/pitch_on"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e6e9ed" />

    <RelativeLayout
        android:id="@+id/report_spite"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/report_spite_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="恶意营销 "
            android:textColor="@color/text_orange"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/report_spite_txt"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/report_spite_txt"
            android:background="@drawable/pitch_on" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e6e9ed" />

    <RelativeLayout
        android:id="@+id/report_induce"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/report_induce_txt"
            style="@style/text_grey_small"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="诱导分享 " />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/report_induce_txt"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/report_induce_txt"
            android:background="@drawable/pitch_on" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e6e9ed" />

    <RelativeLayout
        android:id="@+id/report_political"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/report_political_txt"
            style="@style/text_grey_small"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="政治" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/report_political_txt"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/report_political_txt"
            android:background="@drawable/pitch_on" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e6e9ed" />

    <RelativeLayout
        android:id="@+id/report_other"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/report_other_txt"
            style="@style/text_grey_small"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="其它" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/report_other_txt"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/report_other_txt"
            android:background="@drawable/pitch_on" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e6e9ed" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/report_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:text="取消" />

        <Button
            android:id="@+id/report_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/theme_bg"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>