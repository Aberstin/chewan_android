<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gongpingjia.carplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:gravity="center"
        android:padding="10dp"
        android:text="互相关注可以聊天" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/text_red"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/text_red" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_attention"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>