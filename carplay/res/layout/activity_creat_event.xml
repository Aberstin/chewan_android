<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gongpingjia.carplay.activity.CreatEventActivity" >

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_type" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="活动类型" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_black_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="看电影" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/below_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_introduce" />

                <EditText
                    style="@style/text_blacklight_small"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/nothing"
                    android:hint="请输入活动介绍"
                    android:textColorHint="@color/text_grey" >
                <requestFocus />
                </EditText>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#ccd1d9"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/e_camera" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_boum" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="请选择目的地" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_start" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="开始时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="2015年7月16日 18:03" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/below_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_end" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="结束时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="不确定" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/below_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_cost" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="费用" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="AA制" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/below_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_seating" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="座位数" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="5个" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/below_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="完成"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/text_black_light"
                    android:background="#f1f1f1"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_zc_bg"
                    android:text="完成并邀请好友"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>