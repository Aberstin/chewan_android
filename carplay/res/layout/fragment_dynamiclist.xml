<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/include_refreshlistview2" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/msg_guide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="550dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="550dp"
                android:scaleType="fitXY"
                android:src="@drawable/guide_msg_content" />


            <Button
                android:id="@+id/msg_know"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:background="@color/nothing" />

        </RelativeLayout>


    </ScrollView>

    <View
        android:id="@+id/guide_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="16dp"
        android:background="@color/black70"
        android:visibility="gone">

    </View>


    <ImageView
        android:id="@+id/guide_icon"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/guide_msg_icon"
        android:visibility="gone" />

</RelativeLayout>