<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imgView_head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bg_grey"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imgView_avatar"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_below="@id/imgView_head"
        android:layout_marginTop="-30dp"
        android:src="@drawable/head2" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgView_head"
        android:layout_toRightOf="@id/imgView_avatar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/text_blue_medium"
                    android:text="淘气小布丁" />

                <RelativeLayout
                    android:id="@+id/layout_sex"
                    android:layout_width="35dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/man" >

                    <TextView
                        android:id="@+id/tv_user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:text="23"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgView_car"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/head2" />

                <TextView
                    android:id="@+id/tv_drive_age"
                    style="@style/text_grey_small"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="X6,  8年驾龄" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text_black_medium"
            android:text="关注" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_info"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="32"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA的发布"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/text_red" />
        </LinearLayout>

        <View
            style="@style/line_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
               style="@style/text_grey_medium"
               android:text="64"
               android:layout_marginTop="20dp"/>

            <TextView
               style="@style/text_grey_medium"
               android:text="TA的关注"/>
            <View
                android:layout_marginTop="20dp"
                style="@style/line_horizontal" />
        </LinearLayout>

        <View
            style="@style/line_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

       <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
               style="@style/text_grey_medium"
               android:text="71"
               android:layout_marginTop="20dp"/>

            <TextView
               style="@style/text_grey_medium"
               android:text="TA的活动"/>
            <View
                android:layout_marginTop="20dp"
                style="@style/line_horizontal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>