<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/date_dialog_bg_top"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_dlg_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/dialog_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="区域选择"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/tv_last_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="上一步"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/line_grey"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:text="GPS定位到的城市"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_smaller" />

        <TextView
            android:id="@+id/tv_select_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_blue"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_place"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gps_place"
                style="@style/text_black_small"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="江苏省 南京市 六合区 大明街道"
                android:textColor="@color/text_black_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lv_dlg_places"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:layout_weight="1"
                android:visibility="gone" />

            <com.gongpingjia.carplay.view.SideBar
                android:id="@+id/sideBar"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_btns"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dlg_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:background="@drawable/btn_red_fillet"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />

            <Button
                android:id="@+id/btn_dlg_reselect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_fillet"
                android:text="重新选择"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/date_dialog_bg_bottom"
            android:gravity="center">


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
