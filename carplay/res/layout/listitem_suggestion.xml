<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_s"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imgView_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_location" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="选定"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/tv_select"
            android:layout_toRightOf="@id/imgView_left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_suggestion_name"
                style="@style/text_black_medium" />

            <TextView
                android:id="@+id/tv_suggestion_details"
                style="@style/text_grey_small"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="30dp"
        android:background="@color/bg_grey" />

</LinearLayout>