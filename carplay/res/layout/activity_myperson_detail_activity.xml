<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/imgView_head"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp" >

                    <ImageView
                        android:id="@+id/notlogin_head"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/my_bg"
                        android:visibility="gone" />

                    <com.gongpingjia.carplay.view.CarPlayGallery
                        android:id="@+id/gallery"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/img_loading"
                        android:fadingEdgeLength="0dp"
                        android:unselectedAlpha="128" />

                    <net.duohuo.dhroid.view.DotLinLayout
                        android:id="@+id/dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="6dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/logined"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="176dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <com.gongpingjia.carplay.view.RoundImageView
                            android:id="@+id/head"
                            android:layout_width="59dp"
                            android:layout_height="59dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:id="@+id/nickname"
                                    style="@style/text_blue_medium" />

                                <RelativeLayout
                                    android:id="@+id/gender"
                                    android:layout_width="40dp"
                                    android:layout_height="17dp"
                                    android:layout_marginLeft="7dp" >

                                    <TextView
                                        android:id="@+id/age"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="4dp"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_smaller" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical" >

                                <com.gongpingjia.carplay.view.RoundImageView
                                    android:id="@+id/carBrandLogo"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginRight="7dp" />

                                <TextView
                                    android:id="@+id/carModel"
                                    style="@style/text_grey_small"
                                    android:ellipsize="end"
                                    android:singleLine="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/notlogin"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="176dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="59dp"
                            android:layout_height="59dp"
                            android:src="@drawable/head_icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                style="@style/text_blue_medium"
                                android:layout_marginTop="23dp"
                                android:text="未登录" />

                            <TextView
                                style="@style/text_grey_small"
                                android:layout_marginTop="5dp"
                                android:text="个人信息" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:orientation="vertical" >

                            <Button
                                android:id="@+id/login"
                                style="@style/text_white_medium"
                                android:layout_width="68dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="7dp"
                                android:layout_marginTop="23dp"
                                android:background="@drawable/button_yanzheng_bg"
                                android:text="登录" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/line"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp" >

                        <LinearLayout
                            android:id="@+id/my_release"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_s"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/postNumber"
                                style="@style/text_grey_medium"
                                android:textSize="@dimen/text_title"
                                android:text="0" />

                            <TextView
                                style="@style/text_grey_small"
                                android:layout_marginTop="2dp"
                                android:text="我的发布" />
                        </LinearLayout>

                        <View
                            android:layout_width="1.5px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/cutline" />

                        <LinearLayout
                            android:id="@+id/my_attention"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_s"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/subscribeNumber"
                                style="@style/text_grey_medium"
                                android:textSize="@dimen/text_title"
                                android:text="0" />

                            <TextView
                                style="@style/text_grey_small"
                                android:layout_marginTop="2dp"
                                android:text="我的收藏" />
                        </LinearLayout>

                        <View
                            style="@style/line"
                            android:layout_width="1.5px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/cutline" />

                        <LinearLayout
                            android:id="@+id/my_participation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_s"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/joinNumber"
                                style="@style/text_grey_medium"
                                android:textSize="@dimen/text_title"
                                android:text="0" />

                            <TextView
                                style="@style/text_grey_small"
                                android:layout_marginTop="2dp"
                                android:text="我的参与" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/line" />

                    <LinearLayout
                        android:id="@+id/people_concerned"
                        style="@style/linearlayout"
                        android:background="@drawable/bg_s" >

                        <ImageView
                            style="@style/icon_style_small"
                            android:src="@drawable/my_attention" />

                        <TextView
                            style="@style/text_black_medium"
                            android:text="我关注的人" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="25dp"
                                android:src="@drawable/right_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/line" />

                    <LinearLayout
                        android:id="@+id/owners_certification"
                        style="@style/linearlayout"
                        android:background="@drawable/bg_s" >

                        <ImageView
                            style="@style/icon_style_small"
                            android:src="@drawable/my_approve" />

                        <TextView
                            style="@style/text_black_medium"
                            android:text="车主认证" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/person_txt"
                                style="@style/text_blacklight_small"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text="已认证"
                                android:visibility="gone" />

                            <com.gongpingjia.carplay.view.RoundImageView
                                android:id="@+id/person_carlogo"
                                android:layout_width="28dp"
                                android:layout_height="28dp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="25dp"
                                android:src="@drawable/right_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/line" />

                    <LinearLayout
                        android:id="@+id/carchat"
                        style="@style/linearlayout"
                        android:background="@drawable/bg_s" >

                        <ImageView
                            style="@style/icon_style_small"
                            android:src="@drawable/my_carplay" />

                        <TextView
                            style="@style/text_black_medium"
                            android:text="玩转车聊" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="25dp"
                                android:src="@drawable/right_btn" />
                            <!-- </LinearLayout> -->
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/line" />

                    <LinearLayout
                        android:id="@+id/feedback_layout"
                        style="@style/linearlayout"
                        android:background="@drawable/bg_s" >

                        <ImageView
                            style="@style/icon_style_small"
                            android:src="@drawable/my_about" />

                        <TextView
                            style="@style/text_black_medium"
                            android:text="意见反馈" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="25dp"
                                android:src="@drawable/right_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/line" />

                    <LinearLayout style="@style/linearlayout" />

                    <LinearLayout
                        android:id="@+id/editdata"
                        style="@style/linearlayout"
                        android:background="@drawable/bg_s" >

                        <ImageView
                            style="@style/icon_style_small"
                            android:src="@drawable/my_edit" />

                        <TextView
                            style="@style/text_black_medium"
                            android:text="编辑资料" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="25dp"
                                android:src="@drawable/right_btn" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>