<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gongpingjia.carplay.activity.active.EditEventActivity" >

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_type" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="活动类型" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="看电影" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/below_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_introduce" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="南京将军山一日游" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                style="@style/linearlayout"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        style="@style/icon_style_small"
                        android:src="@drawable/e_content" />

                    <TextView
                        style="@style/text_grey_medium"
                        android:text="活动介绍" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="right|bottom"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="25dp"
                            android:src="@drawable/right_btn" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/text_blacklight_small"
                    android:layout_marginTop="7dp"
                    android:lineSpacingExtra="1.5dp"
                    android:textScaleX="1.1"
                    android:text="参加的人员需准备一些必备的个人物资,尽量早点到达出发点,如果迟到我们不等,如果有什么个人问题,可以拨打我手机18502504444" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginTop="15dp" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_boum" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="请选择目的地" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_start" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="开始时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="center_vertical"
                        android:text="2015年7月16日 18:03" />
                    
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />
            
            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_end" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="结束时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="center_vertical"
                        android:text="不确定" />

                </LinearLayout>
            </LinearLayout>
             <View style="@style/line" />
            
            <LinearLayout style="@style/linearlayout" >

                <ImageView
                    style="@style/icon_style_small"
                    android:src="@drawable/e_cost" />

                <TextView
                    style="@style/text_grey_medium"
                    android:text="费用" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="center_vertical"
                        android:text="AA制" />

                </LinearLayout>
            </LinearLayout>
            
             <View style="@style/line" />
             
             <Button  android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="保存"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium"
                    android:background="@drawable/button_zc_bg"
                    android:layout_marginBottom="20dp"
                    />
             
        </LinearLayout>
    </ScrollView>

</LinearLayout>