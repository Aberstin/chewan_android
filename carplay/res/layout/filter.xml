<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_grey_medium"
            android:layout_marginLeft="14dp"
            android:text="活动位置" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_black_medium"
                android:layout_marginRight="3dp"
                android:text="北京海淀区" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/below_btn" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_grey_medium"
            android:layout_marginLeft="14dp"
            android:text="活动类型" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_black_medium"
                android:layout_marginRight="3dp"
                android:text="唱歌" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/below_btn" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            style="@style/text_grey_medium"
            android:layout_marginTop="13dp"
            android:text="您想看的用户" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/gray_left_frame"
                android:gravity="center"
                android:text="男生"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/orangle_frame"
                android:gravity="center"
                android:text="女生"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/gray_right_frame"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <TextView
            style="@style/text_grey_medium"
            android:layout_marginTop="15dp"
            android:text="是否车主" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/orangle_left_frame"
                android:gravity="center"
                android:text="车主"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/gray_frame"
                android:gravity="center"
                android:text="非车主"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/gray_right_frame"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <TextView
            style="@style/text_grey_medium"
            android:layout_marginTop="15dp"
            android:text="您对出行车辆的要求" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/gray_left_frame"
                android:gravity="center"
                android:text="一般 "
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/gray_frame"
                android:gravity="center"
                android:text="好车"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/orangle_right_frame"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:text="取消"
            android:textSize="@dimen/text_medium" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_zc_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

</LinearLayout>