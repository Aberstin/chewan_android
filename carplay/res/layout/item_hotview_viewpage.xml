<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/tab_grey_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black40"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                style="@style/text_white_medium"
                android:text="车玩活动" />

            <TextView
                android:id="@+id/endtime"
                style="@style/text_white_small"
                android:layout_width="match_parent"
                android:gravity="center_vertical|right"
                android:text="报名截止:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingBottom="6dp" >

            <TextView
                android:id="@+id/content"
                style="@style/text_white_small"
                android:layout_width="match_parent"
                android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="@dimen/text_hot_small" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_about_logo" />

</RelativeLayout>