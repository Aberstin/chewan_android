<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.gongpingjia.carplay.activity.main.LargePICActivity" >

    <com.gongpingjia.carplay.view.CarPlayGallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/img_loading"
        android:fadingEdgeLength="0dp"
        android:unselectedAlpha="0.0"
         />

    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nothing" />

    <TextView
        android:id="@+id/pictitle"
        style="@style/text_white_small"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="1/3" />

</RelativeLayout>