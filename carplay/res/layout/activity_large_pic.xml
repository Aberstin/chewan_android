<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.gongpingjia.carplay.activity.main.LargePICActivity" >

    <TextView
        android:id="@+id/pictitle"
        style="@style/text_white_small"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="1/3" />

    <com.gongpingjia.carplay.view.CarPlayGallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/tab_grey_bg"
        android:fadingEdgeLength="0dp"
        android:spacing="5dp"
        android:unselectedAlpha="128"
        android:layout_centerInParent="true"
         />

</RelativeLayout>