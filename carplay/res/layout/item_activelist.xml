<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_grey"
    android:orientation="vertical"
    my:android="http://schemas.android.com/apk/res/com.gongpingjia.carplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="21dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dynamic_title"
                    style="@style/text_black_medium"
                    android:ellipsize="end"
                    android:maxWidth="210dp"
                    android:singleLine="true"
                    android:text="陈信宏想邀请你吃个饭" />

                <ImageView
                    android:id="@+id/certification_achievement"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/headaut_dl"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/dynamic_carlogo"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/headaut_dl" />

                <TextView
                    android:id="@+id/dynamic_carname"
                    style="@style/text_grey_small"
                    android:layout_marginLeft="9dp"
                    android:text="328i" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include layout="@layout/include_sex" />

                <TextView
                    android:id="@+id/pay_type"
                    style="@style/text_black_small"
                    android:layout_marginLeft="9dp"
                    android:text="请我吧"
                    android:textColor="@color/text_pink" />

                <TextView
                    android:id="@+id/travelmode"
                    style="@style/text_black_small"
                    android:layout_marginLeft="9dp"
                    android:text="包接送"
                    android:textColor="@color/text_skyblue" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/activity_beijing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/model_pic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.gongpingjia.carplay.view.AnimButtonView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    my:bg="@drawable/red_circle"
                    my:src="@drawable/red_circle">

                    <TextView
                        style="@style/text_white_medium"
                        android:layout_centerInParent="true"
                        android:text="邀 TA" />
                </com.gongpingjia.carplay.view.AnimButtonView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/yingyao_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"

                android:orientation="horizontal">

                <com.gongpingjia.carplay.view.AnimButtonView
                    android:id="@+id/yingyao"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    my:bg="@drawable/red_circle"
                    my:src="@drawable/red_circle">

                    <TextView
                        style="@style/text_white_medium"
                        android:layout_centerInParent="true"
                        android:text="应邀" />
                </com.gongpingjia.carplay.view.AnimButtonView>

                <com.gongpingjia.carplay.view.AnimButtonView
                    android:id="@+id/hulue"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    my:bg="@drawable/red_circle"
                    my:src="@drawable/red_circle">

                    <TextView
                        style="@style/text_white_medium"
                        android:layout_centerInParent="true"
                        android:text="忽略" />
                </com.gongpingjia.carplay.view.AnimButtonView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/yingyaohou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.gongpingjia.carplay.view.AnimButtonView
                    android:id="@+id/dyanmic_one"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    my:bg="@drawable/red_circle"
                    my:src="@drawable/red_circle">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/chat_icon"/>
                </com.gongpingjia.carplay.view.AnimButtonView>

                <com.gongpingjia.carplay.view.AnimButtonView
                    android:id="@+id/dyanmic_two"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    my:bg="@drawable/red_circle"
                    my:src="@drawable/red_circle">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/phon_icon"/>
                </com.gongpingjia.carplay.view.AnimButtonView>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="21dp">

            <TextView
                android:id="@+id/activity_place"
                style="@style/text_grey_small"
                android:text="北京烤鸭大酒店"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/distance_icon"/>

                <TextView
                    android:id="@+id/activity_distance"
                    style="@style/text_black_small"
                    android:text="20m"
                    android:textColor="@color/text_skyblue"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

    </LinearLayout>

</LinearLayout>
