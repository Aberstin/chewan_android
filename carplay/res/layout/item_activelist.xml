<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_white_fillet"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="9dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="15dp">


            <LinearLayout
                android:id="@+id/titlelayout"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dynamic_title"
                        style="@style/text_black_medium"
                        android:singleLine="true"
                        android:text="陈信宏想邀请你吃个饭" />

                    <TextView
                        android:id="@+id/dynamic_type"
                        style="@style/text_black_medium"
                        android:maxWidth="100dp"
                        android:singleLine="true"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/certification_achievement"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/headaut_dl" />

                    <ImageView
                        android:id="@+id/dynamic_carlogo"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/headaut_dl" />

                    <TextView
                        android:id="@+id/dynamic_carname"
                        style="@style/text_grey_small"
                        android:layout_marginLeft="9dp"
                        android:ellipsize="end"
                        android:text="328i"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include layout="@layout/include_sex" />

                <TextView
                    android:id="@+id/pay_type"
                    style="@style/text_black_smaller"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="请我吧"
                    android:textColor="@color/text_pink" />

                <TextView
                    android:id="@+id/travelmode"
                    style="@style/text_black_smaller"
                    android:text="包接送"
                    android:textColor="@color/text_skyblue" />

                <LinearLayout
                    android:id="@+id/photo_distancelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/distance_icon" />

                    <TextView
                        android:id="@+id/photo_distance"
                        style="@style/text_black_small"
                        android:text="20m"
                        android:textColor="@color/text_skyblue" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/activity_beijing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_loading"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/inviteT"
                    style="@style/text_white_small"
                    android:layout_width="fill_parent"
                    android:background="#b3000000"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/promtp"
                    style="@style/text_white_small"
                    android:layout_below="@+id/inviteT"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/phtoto"
                    android:gravity="center"
                    android:text="你不传2张照片就想看我的，不公平哦" />


                <include layout="@layout/include_active_button" />

                <LinearLayout
                    android:id="@+id/phtoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/upload"
                        android:layout_width="70dp"
                        android:layout_height="38dp"
                        android:background="@drawable/white_btn_bg"
                        android:text="上传"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/takephotos"
                        android:layout_width="70dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_btn_bg"
                        android:text="拍照"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/album"
                        android:layout_width="70dp"
                        android:layout_height="38dp"
                        android:background="@drawable/white_btn_bg"
                        android:text="相册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
            <!--<LinearLayout-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="#50000000"-->
            <!--android:visibility="gone">-->

            <!--</LinearLayout>-->

        </FrameLayout>


        <LinearLayout
            android:id="@+id/active_distancelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/activity_place"
                style="@style/text_grey_small"
                android:ellipsize="end"
                android:maxWidth="230dp"
                android:singleLine="true"
                android:text="北京烤鸭大酒店" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/distance_icon" />

                <TextView
                    android:id="@+id/active_distance"
                    style="@style/text_black_small"
                    android:text="20m"
                    android:textColor="@color/text_skyblue" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/new_bg_grey"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:paddingBottom="12dp"-->
    <!--android:paddingTop="12dp">-->

    <!--</LinearLayout>-->
</LinearLayout>
