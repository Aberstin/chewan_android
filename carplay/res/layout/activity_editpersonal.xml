                </RadioGroup> -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sex"
                        style="@style/text_grey_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|right"
                        android:singleLine="true" />

                    <!--<ImageView-->
                    <!--android:layout_width="18dp"-->
                    <!--android:layout_height="22dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@drawable/right_btn" />-->
                </LinearLayout>


            </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#e6e9ed" />



            <LinearLayout
                android:id="@+id/personal_age_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="年龄" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edit_age"
                        style="@style/text_blacklight_medium"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="18dp"
                        android:layout_height="22dp"

                        android:src="@drawable/right_btn" />
                </LinearLayout>


            </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#e6e9ed" />


            <LinearLayout
                android:id="@+id/approve_layout_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_s"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="头像认证" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/head_approve"
                        style="@style/text_blacklight_medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>
            </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#e6e9ed" />



            <LinearLayout
                android:id="@+id/approve_layout_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_s"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="车主认证" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/personal_car_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/car_approve"
                        style="@style/text_blacklight_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>

            </LinearLayout>


    </LinearLayout>

</LinearLayout>