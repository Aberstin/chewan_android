<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gongpingjia.carplay.activity.my.BasicMessageActivity" >

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#f5f7fa"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/head_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" >

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="昵称" />

                <EditText
                    android:id="@+id/nickname"
                    style="@style/text_blacklight_medium"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/nothing"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/text_grey" 
					android:singleLine="true"
                    android:hint="请输入昵称" />
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" >

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="性别" />

                <RadioGroup
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/tab_left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/radio_sex"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="男"
                        android:textColor="@color/coach_text_s"
                        android:textSize="@dimen/text_medium" />

                    <RadioButton
                        android:id="@+id/tab_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_sex"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="女"
                        android:textColor="@color/coach_text_s"
                        android:textSize="@dimen/text_medium" />
                </RadioGroup>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_s"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="年龄" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/age"
                        style="@style/text_blacklight_medium"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:gravity="center_vertical|right" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_s"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    style="@style/text_grey_medium"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="地区" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/city"
                        style="@style/text_blacklight_medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="40dp"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:src="@drawable/right_btn" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line" />

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_zc_bg"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>