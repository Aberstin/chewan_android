<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:src="@drawable/mate_title" />


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">


            <RelativeLayout
                android:id="@+id/content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/mate_bg" />

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/eat"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    my:bg="@drawable/mate_cf"
                    my:src="@drawable/circle_cf">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/sing"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="42dp"
                    my:bg="@drawable/mate_cg"
                    my:src="@drawable/circle_cg">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/film"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="108dp"
                    my:bg="@drawable/mate_kdy"
                    my:src="@drawable/circle_kdy">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/dog"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="170dp"
                    my:bg="@drawable/mate_lg"
                    my:src="@drawable/circle_lg">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/exercise"
                    android:layout_width="91dp"
                    android:layout_height="91dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="192dp"
                    my:bg="@drawable/mate_yd"
                    my:src="@drawable/circle_yd">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/night_eat"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="220dp"
                    my:bg="@drawable/icon_zhuoyou"
                    my:src="@drawable/circle_yx">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/night_shop"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="433dp"
                    android:layout_marginTop="24dp"
                    my:bg="@drawable/mate__yed"
                    my:src="@drawable/circle_yed">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/shop"
                    android:layout_width="91dp"
                    android:layout_height="91dp"
                    android:layout_marginLeft="338dp"
                    android:layout_marginTop="92dp"
                    my:bg="@drawable/mate_gw"
                    my:src="@drawable/circle_gw">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/coffee"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginLeft="395dp"
                    android:layout_marginTop="195dp"
                    my:bg="@drawable/mate_hkf"
                    my:src="@drawable/circle_hkf">

                </com.gongpingjia.carplay.view.AnimButtonView2>

                <com.gongpingjia.carplay.view.AnimButtonView2
                    android:id="@+id/beer"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="295dp"
                    android:layout_marginTop="250dp"
                    my:bg="@drawable/mate_hj"
                    my:src="@drawable/circle_hj">

                </com.gongpingjia.carplay.view.AnimButtonView2>

            </RelativeLayout>


        </HorizontalScrollView>


        <Button
            android:id="@+id/btn_click"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@drawable/mate_btn_bg"
            android:text="随便看看"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/guide"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">


        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black70"></View>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guide_match" />


        <View
            android:id="@+id/empty"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"></View>

        <Button
            android:id="@+id/know"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_below="@+id/empty"
            android:layout_centerHorizontal="true"
            android:background="@color/nothing" />

    </RelativeLayout>

</RelativeLayout>