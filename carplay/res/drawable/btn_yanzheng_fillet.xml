<?xml version="1.0" encoding="UTF-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 获得焦点但未按下时的背景图片 -->
        <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/btn_verification_fillet_normal" />
         <!-- 按下时的背景图片 -->
        <item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/btn_verification_fillet_focused" />
        <!-- 按下时的背景图片 -->
        <item android:state_enabled="true" android:state_checked="true" android:drawable="@drawable/btn_verification_fillet_focused" />
        <!-- 默认时的背景图片 -->
        <item android:drawable="@drawable/btn_verification_fillet_normal" />
</selector>