<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:src="@drawable/mate_title" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">


        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/mate_bg" />

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="6dp"
                my:bg="@drawable/mate_cf"
                my:src="@drawable/mate_cf">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="62dp"
                my:bg="@drawable/mate_cg"
                my:src="@drawable/mate_cg">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="138dp"
                my:bg="@drawable/mate_kdy"
                my:src="@drawable/mate_kdy">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="200dp"
                my:bg="@drawable/mate_lg"
                my:src="@drawable/mate_lg">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="232dp"
                my:bg="@drawable/mate_yd"
                my:src="@drawable/mate_yd">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="280dp"
                my:bg="@drawable/mate_yx"
                my:src="@drawable/mate_yx">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="473dp"
                android:layout_marginTop="34dp"
                my:bg="@drawable/mate_yd"
                my:src="@drawable/mate_yd">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="368dp"
                android:layout_marginTop="102dp"
                my:bg="@drawable/mate_gw"
                my:src="@drawable/red_circle">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="415dp"
                android:layout_marginTop="226dp"
                my:bg="@drawable/mate_hkf"
                my:src="@drawable/mate_hkf">

            </com.gongpingjia.carplay.view.AnimButtonView>

            <com.gongpingjia.carplay.view.AnimButtonView
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="335dp"
                android:layout_marginTop="295dp"
                my:bg="@drawable/mate_hj"
                my:src="@drawable/mate_hj">

            </com.gongpingjia.carplay.view.AnimButtonView>

        </RelativeLayout>


    </HorizontalScrollView>


    <Button
        android:id="@+id/btn_click"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:background="@drawable/mate_btn_bg"
        android:text="随便看看"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium" />
</LinearLayout>